<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/booking_list_thumbnail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:contentDescription=""
        android:scaleType="centerInside"
        tools:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/booking_list_text_layout"
        android:layout_width="130dp"
        android:layout_height="88dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/booking_list_thumbnail"
        android:layout_toRightOf="@id/booking_list_thumbnail"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/booking_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            tools:text="name" />

        <TextView
            android:id="@+id/booking_list_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/booking_list_title"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="16sp"
            tools:text="date" />

        <TextView
            android:id="@+id/booking_list_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/booking_list_subtitle"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="16sp"
            tools:text="status" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/booking_list_text_layout2"
        android:layout_width="100dp"
        android:layout_height="87dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/booking_list_text_layout"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/booking_list_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="id" />

        <TextView
            android:id="@+id/booking_list_siteLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/booking_list_location"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="site location" />

        <TextView
            android:id="@+id/booking_list_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/booking_list_id"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="location" />
    </RelativeLayout>

</RelativeLayout>
